div#top
  div#pregame
    a#play_friend(href:'#')
      img(src:'img/bump_to_play_a_friend.png')

  div#playing
    p#status_text
    - var colors = ['black', 'red']
    - each color in colors
      img(id:color+'_arrow', src:'/img/bump4_arrow_'+color+'.png')
      div(id:color+'_move')

ol#cols
  - each num in [0,1,2,3,4,5,6]
    li(id:'c'+num)

div#bottom
  a#end_game(href:'#') End Game

- each num in [0,1,2,3,4,5]
  audio(id:'a'+num, src:'/audio/sound_row'+num+'.mp3')

audio#a_quit(src:'/audio/sound_quit_game_button.mp3')
audio#a_win(src:'/audio/sounds_youwin.mp3')

div#bump
  a#close(href:'#') x
  h2#bump_logo Bump
  div#connect
    header
      div#wifi
      div#left_bump
      div#right_bump
      h3 Bump to connect

    p Bump with another BumpFour player to start game.
    span#my_name Player
    a#name_button(href:'#') Edit name
  div#edit_name
    h3 Edit name
    form#new_name
      input#your_name(name:'your_name', type:'text', placeholder:'Enter name', maxlength:'16')
  div#connecting
    h3 Connecting...
    p Please wait.
    img#activity(src:'/img/activity.gif')
  div#no_match
    h3 No match found.
    p Please try again.
  div#opponent_quit
    h3 The other player quit.
  div#disconnected
    h3 You have been disconnected. Try starting a new game.

div#overlay

script(type:'text/javascript', src:'/script.js')

